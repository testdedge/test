<header>
  <div class="row">

      <% if flash[:notice] %>
          <div class="alert alert-success"><%= flash[:notice] %></div>
      <% elsif flash[:alert] %>
          <div class="alert alert-danger"><%= flash[:alert] %></div>
      <% end %>
  </div>
</header>

  <div class="container">
    <div class="row">
      <div class="col-md-3 ">
        <%= form_for @user, url:{action: 'login', params: {name: @user.name}} do |f| %>
            <div class="form-group">
              <label for="new-user-name">Login </label>
              <%= f.text_field :name, required: true ,class: 'form-control', id: 'new-user-name' %>
              <%= f.submit 'Login', class: 'form-control btn btn-success' %>
            </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= form_for @newuser, url:{action: 'create_user', params: {name: @newuser.name}} do |f| %>
            <div class="form-group">
              <label for="new-user-name">Create new user </label>
              <%= f.text_field :name, required: true, class: 'form-control', id: 'new-user-name' %>
              <%= f.submit 'Create new user', class: 'form-control btn btn-success' %>
            </div>
        <% end %>
      </div>


    </div>
    <div class="row">

    </div>

    <div class="row">

      <div class="col-md-20">
        <table class="table">
          <tr>
            <td>User name</td>
            <td>Arrival date</td>
            <td>Arrival time</td>
            <td>Lateness</td>
          </tr>
          <% @atimes.each do |a| %>
          <tr class="<%='lateness' if a.lateness %>">
            <td><%= link_to a.user.name , a.user %></td>
            <td><%= a.time.strftime("%T") %></td>
            <td><%= a.time.strftime("%F") %></td>
            <td><%= a.lateness %></td>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <%= link_to "Analytics", 'analytics', class: "btn btn-primary"  %>
      </div>
    </div>
  </div>





